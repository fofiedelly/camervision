{%  extends "::layout.html.twig" %}
{%  block titre %}
    {{  article.titre }} {{  parent() }}
{% endblock %}
{%  block slogan %}

    <div class="box">
        <div class="border-right">
            <div class="border-left">
                <div class="inner">
                    <h3> <span>{{  article.titre }}</span></h3>

                    {% if article.codeYoutube is not null %}

                  <center>    <iframe width="572" height="348" src="//www.youtube.com/embed/{{  article.codeYoutube }}" frameborder="0"></iframe></center></center>

                        {% else %}
                            {%  if article.image is not null %}
                                {% for image in article.image %}
                                    {% if loop.last %}
                                   <center>     <img src="{% path image.image, 'big' %}" width="572" height="348"/></center>
                                    {% endif %} <!-- endif loop.last -->
                                {% endfor %}
                            {% else %}

                            {% endif %}
                    {% endif %}

                    <p>
                    {{ article.contenu }}
                    </p>

                </div>
            </div>
        </div>
    </div>
{% endblock %}