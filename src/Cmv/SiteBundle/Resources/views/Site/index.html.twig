{%  extends "::layout.html.twig" %}
{%  block titre %} Accueil{{  parent() }}{%  endblock %}

{%  block contentTop %}
<div class="box">
    <div class="border-right">
        <div class="border-left">
            <div class="inner">
    <h3>Bienvenu sur <b>Camer</b><span>Vision</span></h3>
    <p>
        {%  if accueil is defined  %}
            {{  accueil.description }}
            {% else %}
